@{
    ViewData["Title"] = "Departments";
}

<style>
    .link-no-underline {
        text-decoration: none;
        color: black;
        cursor: pointer;
    }
</style>

@using(Html.BeginForm())
{
    <div class="input-group">
        @Html.TextBox("SearchByName", null, new{ @class="form-control", @placeholder="Search By Name..." })
        <input type="submit" value="Search" class="btn btn-outline-secondary">
        <a asp-action="Create" class="btn btn-outline-primary">Add</a>
    </div>
}

<div class="text-center">
    <h1 class="display-4">All Departments</h1>

    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.ActionLink("Department Name", "Index", new{ SortField = "DepartmentName", CurrentSortField = ViewBag.SortField, SortDirection = ViewBag.SortDirection}, new { @class = "link-no-underline" })
                </th>
                <th>
                    @Html.ActionLink("Department Abbreviation", "Index", new{ SortField = "DepartmentAbbrev", CurrentSortField = ViewBag.SortField, SortDirection = ViewBag.SortDirection}, new { @class = "link-no-underline" })
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var department in Model)
            {
                <tr>
                    <td>@department.DepartmentName</td>
                    <td>@department.DepartmentAbbrev</td>
                    <td>
                        <a asp-action="Update" asp-route-id="@department.DepartmentID" class="btn btn-primary">Update</a>
                        <a asp-action="Delete" asp-route-id="@department.DepartmentID" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this department?')">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>